    <!-- Jail Role Code data -->
    <!-- Note: this version assumes that the original SQL DML for jail_role_codes has been run and does no checking for preconditions -->
    <changeSet author="Carol Geisler" id="UPD_jrcd_SUPERVISOR">
      <insert catalogName="${POSTGRES_CATALOG}"
              schemaName="${POSTGRES_SCHEMA}"
              tableName="jail_role_code">
          <column name="jail_role_code" type="VARCHAR(20)" value="SUPERVISOR"/>
          <column name="description" type="VARCHAR(200)" value="Supervisor"/>
          <column name="effective_date" type="DATE" valueDate="now()"/>
          <column name="created_by" type="VARCHAR(32)" value="SCRIPT_JAIL_ROLE_CODE_PROD"/>
          <column name="updated_by" type="VARCHAR(32)" value="SCRIPT_JAIL_ROLE_CODE_PROD"/>
          <column name="created_dtm" type="TIMESTAMP WITH TIME ZONE" valueDate="now()"/>
          <column name="updated_dtm" type="TIMESTAMP WITH TIME ZONE" valueDate="now()"/>
          <column name="revision_count" type="NUMERIC" valueNumeric="0"/>
      </insert>
      <update catalogName="${POSTGRES_CATALOG}"
              schemaName="${POSTGRES_SCHEMA}"
              tableName="assignment">
          <column name="jail_role_code" type="VARCHAR(20)" value="SUPERVISOR"/>
          <where>jail_role_code = 'SERGEANT'</where>
      </update>
      <update catalogName="${POSTGRES_CATALOG}"
              schemaName="${POSTGRES_SCHEMA}"
              tableName="jail_role_code">
          <column name="expiry_date" type="VARCHAR(20)" valueDate="now()"/>
          <where>jail_role_code = 'SERGEANT'</where>
      </update>
      <rollback>
          <update catalogName="${POSTGRES_CATALOG}"
                  schemaName="${POSTGRES_SCHEMA}"
                  tableName="jail_role_code">
              <column name="expiry_date" type="date" valueDate="NULL"/>
              <where>jail_role_code = 'SERGEANT'</where>
          </update>
          <update catalogName="${POSTGRES_CATALOG}"
                  schemaName="${POSTGRES_SCHEMA}"
                  tableName="assignment">
              <column name="jail_role_code" type="VARCHAR(20)" value="SERGEANT"/>
              <where>jail_role_code = 'SUPERVISOR'</where>
          </update>
          <delete catalogName="${POSTGRES_CATALOG}"
              schemaName="${POSTGRES_SCHEMA}"
              tableName="jail_role_code">
              <where>jail_role_code='SUPERVISOR'</where>
          </delete>
      </rollback>
    </changeSet>
    
    <changeSet author="Carol Geisler" id="DEL_jrcd_DEPUTYSERGEANT">
